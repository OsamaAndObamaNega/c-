{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with Most Aggressive Optimization",
            "type": "shell",
            "command": "g++",
            "args": [
                "-O3",
                "-flto",
                "-march=native",
                "-fomit-frame-pointer",
                "-funroll-loops",
                "-ffast-math",
                "-fno-exceptions",
                "-fno-rtti",
                "-DNDEBUG",
                "-std=c++20",
                "main.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}_optimized"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compiles the current file with the most aggressive optimization flags."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "G:\\MSYS\\ucrt64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-O3",
                "-flto",
                "-march=native",
                "-fomit-frame-pointer",
                "-funroll-loops",
                "-ffast-math",
                "-fno-exceptions",
                "-fno-rtti",
                "-DNDEBUG",
                "-std=c++20",
                "main.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}_optimized"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc.exe build active file",
            "command": "G:/MSYS/ucrt64/bin/gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                ""
            ],
            "options": {
                "cwd": "G:/MSYS/ucrt64/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ]
}